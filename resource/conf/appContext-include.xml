	<!-- SPRING管理STRUTS2的ACTION配置 -->
	<import resource="appContext-action.xml" />
	
	<!-- Activiti配置 -->
	<import resource="activiti.cfg.xml" />
	<!-- SPRING管理AOP配置 -->
