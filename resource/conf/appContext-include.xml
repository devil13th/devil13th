	<!-- SPRING管理HIBERNATE的数据源及事务的配置 -->
	<import resource="appContext-db.xml" />
	
	<context:component-scan base-package="cn.thd,com.thd.core"/>  
	
	<!-- SPRING管理HIBERNATE的DAO的配置 已采用annotation方式,所以注释掉 -->
